<% include ./partials/header %>

<div class="row">
    <div style="width: 30%; margin: 25px auto;">
        <form class="form-signin" action="/register" method="post">
            <h1 style="text-align: center">Sign Up</h1>
            <input class="form-control" type="text" name="username" placeholder="username">
            <input class="form-control midform" id="midform" type="password" name="password" placeholder="password">
            <input class="form-control midform" type="text" name="firstName" placeholder="first name">
            <input class="form-control midform" type="text" name="lastName" placeholder="last name">
            <input class="form-control midform" type="email" name="email" placeholder="email">
            <input class="form-control midform" type="text" name="avatar" placeholder="avatar url">
            <input class="form-control" type="password" name="adminCode" placeholder="admin Code">
            <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer %>
